@using EmployeeManagement.EF.Entities
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tüm Departmanlar</h2>
@*<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            
        </div>
    </div>
</div>*@

<table class="table table-bordered">
    <colgroup>
        <col style="width:80%;" />
        <col style="width:10%;" />
        <col style="width:10%;" />
    </colgroup>
    <thead>
        <tr>
            <th>Departman Adı</th>
            <th></th>
            <th>
                <a href="/Department/Edit">Yeni</a>
            </th>
        </tr>
    </thead>
    <tbody>
       @{
           Department department;
           for (int i = 0; i < Model.Count; i++)
           {
               department = Model[i];
               <tr>
                   <td>@department.Name</td>
                   <td>
                       <a href="/Department/Edit/@department.Id">Düzenle</a>
                   </td>
                   <td>
                       <a href="/Department/Delete/@department.Id">Sil</a>
                   </td>
               </tr>
           }
       }
    </tbody>
</table>